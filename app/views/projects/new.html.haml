.project
	.container
		.col-md-6.col-md-offset-3
			= form_tag @project do
				#header
				%h2 New combination
				.form-group
					%h3 Project name
					= text_field_tag :name, nil, class: "form-control"

				%h3 Select the spreadsheets you'd like to combine:

				#spreadsheets
					%table
						- @spreadsheets.each do |spreadsheet|
							%tr
								%td
									= check_box_tag 'spreadsheet_ids[]', spreadsheet.id
								%td
									%p
										&nbsp;
										= spreadsheet.name
				#skiprows
					%h3 Skip header rows?
					%table
						%tr
							%td
								= check_box_tag :skip_multiple	
							%td
								%h4 When my spreadsheets are combined, please remove header rows after the first
				%p= submit_tag "Continue", class: "btn btn-primary"
				%p= link_to "Back", projects_path, name: "back_button", class: "btn btn-primary"