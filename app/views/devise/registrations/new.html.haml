.sign-up
  %section#form
    .container
      .row
        .col-md-12
          %h1.text-center.light To get started, create a free account 
      .row
        .col-md-4.col-md-offset-4#form-area
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = devise_error_messages!

            .form-group
              = f.label :email
              = f.email_field :email, autofocus: true, class: "form-control"

            .form-group
              = f.label :password
              - if @validatable
                %em= "#{@minimum_password_length} characters minimum"
              = f.password_field :password, autocomplete: "off", class: "form-control"

            .form-group
              = f.label :password_confirmation
              = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"

            .actions
              = f.submit "Sign up", class: "btn btn-primary"

          = render "devise/shared/links"

    %section#overview
      .triangle-down.white  
      .container
        .row
          .col-md-12
            %h1.text-center.light How Combine Spreadsheets works
        .row
          .col-md-8.col-md-offset-2
            .col-md-6
              %h3.text-center.light.push Upload the spreadsheets you would like to combine
            .col-md-6
              = image_tag "devise/registrations/small_spreadsheets.png", class: 'center-block'
        .row
          .col-md-2.col-md-offset-5
            = image_tag "devise/registrations/arrow_down.gif", class: "center-block arrow"
        .row.feature
          .col-md-8.col-md-offset-2
            .col-md-6
              %h3.text-center.light Start a project to combine any of your spreadsheets
            .col-md-6
              = image_tag "devise/registrations/select_spreadsheets.png", class: 'center-block'
        .row
          .col-md-2.col-md-offset-5
            = image_tag "devise/registrations/arrow_down.gif", class: "center-block arrow"
        .row.feature
          .col-md-8.col-md-offset-2
            .col-md-6
              %h3.text-center.light Reorder spreadsheet columns so they match
            .col-md-6
              = image_tag "devise/registrations/reorder_columns.png", class: 'center-block'
        .row
          .col-md-2.col-md-offset-5
            = image_tag "devise/registrations/arrow_down.gif", class: "center-block arrow"
        .row.feature
          .col-md-8.col-md-offset-2
            .col-md-6
              %h3.text-center.light.push Easily download your combined spreadsheet
            .col-md-6
              = image_tag "devise/registrations/finished_spreadsheet.png", class: 'center-block'

